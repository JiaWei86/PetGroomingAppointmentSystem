@{
    ViewData["Title"] = "Appointment";
    ViewData["ActivePage"] = "Appointment";
}


<!-- Calendar Section -->
<div class="calendar-section">
    <div class="calendar-container">
        <div class="calendar-header">
            <h3 class="panel-title">
                <i class="material-icons">calendar_month</i>
                Appointment Calendar
            </h3>
            <div class="calendar-nav">
                <button id="prevMonth" class="btn-nav">
                    <i class="material-icons">chevron_left</i>
                </button>
                <h3 id="monthYear" class="calendar-title"></h3>
                <button id="nextMonth" class="btn-nav">
                    <i class="material-icons">chevron_right</i>
                </button>
            </div>
        </div>
        <div id="calendar" class="calendar-grid"></div>
    </div>

    <div class="appointments-sidebar">
        <div class="sidebar-header">
            <h3 class="sidebar-title">
                <i class="material-icons">event_available</i>
                Daily Schedule
            </h3>
            <span id="selectedDate" class="selected-date-badge">Today</span>
        </div>
        <div id="appointmentsList" class="appointments-list"></div>
    </div>
</div>

