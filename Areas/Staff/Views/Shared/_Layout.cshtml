<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetGrooming</title>

    <!-- Force fresh CSS load -->
    <link rel="stylesheet" href="~/admin/css/site.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="~/admin/css/dashboard.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @RenderSection("Styles", required: false)
    <style>
        .profile-link {
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            color: inherit;
            cursor: pointer;
            padding: 8px 12px;
            border-radius: 6px;
            transition: background-color 0.3s ease;
        }

            .profile-link:hover {
                background-color: rgba(0, 0, 0, 0.05);
            }

            .profile-link i {
                font-size: 28px;
            }
    </style>
</head>
<body>
    <div id="app-container">

        <aside id="sidebar">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Customer/img/logo.png" alt="">
                </a>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li><a class="@(ViewData["ActivePage"] as string == "Appointment" ? "active" : "")" asp-area="Staff" asp-controller="Home" asp-action="Index"><i class="material-icons">event</i>Appointments</a></li>

                    <!-- ========== LOGOUT BUTTON ========== -->
                    <li style="margin-top: 30px; border-top: 1px solid rgba(255,255,255,0.2); padding-top: 20px;">
                        <a href="@Url.Action("StaffLogout", "Auth", new { area = "Admin" })"
                           style="color: #ffff;"
                           onclick="return confirm('Are you sure you want to logout?');">
                            <i class="material-icons">logout</i>Logout
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <div id="main-content-wrapper">

            <header id="topbar">
                <div class="user-profile">
                    <a href="@Url.Action("Profile", "Home", new { area = "Staff" })" class="profile-link">
                        <span>@(Context.Session.GetString("StaffUsername") ?? "Staff User")</span>
                        <i class="material-icons">account_circle</i>
                    </a>
                </div>
            </header>

            @RenderBody()

        </div>
    </div>

    @RenderSection("Scripts", required: false)

    <!-- Add your script here -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"
            integrity="sha512-YcsIPGdh0IbnCt0A6Ld0JSafpPvM5TIVLSiDS5C7lzuWIe9okT8unU0I4ZgHn6+hWcIYgS4PpXWkU1D92dM1KQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/admin/js/admin.js?v=@DateTime.Now.Ticks"></script>
</body>
</html>