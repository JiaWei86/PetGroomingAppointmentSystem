<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetGrooming</title>

    <link rel="stylesheet" href="~/admin/css/site.css?v=@DateTime.Now.Ticks" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/admin/lib/select2.min.css" />
    <link rel="stylesheet" href="~/admin/lib/flatpickr.min.css" />
    <style>
        .profile-link {
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            color: inherit;
            cursor: pointer;
            padding: 8px 12px;
            border-radius: 6px;
            transition: background-color 0.3s ease;
        }

            .profile-link:hover {
                background-color: rgba(0, 0, 0, 0.05);
            }

            .profile-link i {
                font-size: 28px;
            }

    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div id="app-container">

        <aside id="sidebar">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Customer/img/logo2.png" alt="">
                </a>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a class="@(ViewData["ActivePage"] as string == "Dashboard" ? "active" : "")"
                           asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <i class="material-icons">dashboard</i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a class="@(ViewData["ActivePage"] as string == "Groomer" ? "active" : "")"
                           asp-area="Admin" asp-controller="Home" asp-action="Groomer">
                            <i class="material-icons">person</i> Groomers
                        </a>
                    </li>
                    <li>
                        <a class="@(ViewData["ActivePage"] as string == "Appointment" ? "active" : "")"
                           asp-area="Admin" asp-controller="Home" asp-action="Appointment">
                            <i class="material-icons">event</i> Appointments
                        </a>
                    </li>

                    <li>
                        <a class="@(ViewData["ActivePage"] as string == "Customer" ? "active" : "")"
                           asp-area="Admin" asp-controller="Home" asp-action="Customer">
                            <i class="material-icons">contacts</i> Customers
                        </a>
                    </li>
                    <li>
                        <a class="@(ViewData["ActivePage"] as string == "RedeemGift" ? "active" : "")"
                           asp-area="Admin" asp-controller="Home" asp-action="RedeemGift">
                            <i class="material-icons">redeem</i> Redeem Gifts
                        </a>
                    </li>

                    <li>
                        <a class="@(ViewData["ActivePage"] as string == "Service" ? "active" : "")"
                           asp-area="Admin" asp-controller="Home" asp-action="Service">
                            <i class="material-icons">content_cut</i> Service
                        </a>
                    </li>
                    <li>
                        <a class="@(ViewData["ActivePage"] as string == "reports" ? "active" : "")"
                           asp-area="Admin" asp-controller="Home" asp-action="reports">
                            <i class="material-icons">report</i> Reports
                        </a>
                    </li>

                    <li style="margin-top:20px; border-top:1px solid rgba(255,255,255,0.2); padding-top:20px;">
                        <a href="@Url.Action("AdminLogout", "Auth", new { area = "Admin" })" style="color: #fff;">
                            <i class="material-icons">logout</i> Logout
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <div id="main-content-wrapper">

            <header id="topbar">
                <div class="user-profile">
                    <a href="@Url.Action("Profile", "Home", new { area = "Admin" })" class="profile-link">
                        <span>@(Context.Session.GetString("AdminUsername") ?? "Admin User")</span>
                        <i class="material-icons">account_circle</i>
                    </a>
                </div>
            </header>

            <main id="main-content" role="main" class="pb-3">
                <div class="main-inner">
                    @RenderBody()
                </div>
            </main>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="~/admin/lib/select2.min.js"></script>
    <script src="~/admin/lib/flatpickr.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" referrerpolicy="no-referrer"></script>

    <script src="~/admin/js/admin.js?v=@DateTime.Now.Ticks"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>