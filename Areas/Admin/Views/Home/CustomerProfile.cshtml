            }
            if (deleteBtn) {
                    const petId = deleteBtn.dataset.petId;
                    const petName = deleteBtn.dataset.petName || 'this pet';
                    window.openConfirmModal('Confirm Delete', `Are you sure you want to delete "${petName}"?`, function() {
                        // proceed with delete
