        function formatBytes(bytes) {
            if (bytes === 0) return '0 B';
            const k = 1024;
            const sizes = ['B', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Render selectable preview list and validate selected files
        function renderPhotoPreviewList() {
            const container = document.getElementById('photoPreviewList');
            const display = document.getElementById('photoFileName');
            const statusEl = document.getElementById('photoValidationMessage');
            const saveBtn = document.getElementById('saveCustomerBtn');
            if (!container || !display || !statusEl) return;
            container.innerHTML = '';
            if (!selectedCustomerPhotos || selectedCustomerPhotos.length === 0) {
                display.textContent = 'No files chosen';
                statusEl.textContent = '';
                statusEl.classList.remove('valid');
                if (saveBtn) saveBtn.disabled = false;
                return;
            }

            display.textContent = ` ${selectedCustomerPhotos.length} files`;

            const allowedTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
            const maxSize = 5 * 1024 * 1024; // 5MB

            const invalidMessages = [];
            const validNames = [];

            // Build checkbox list so user can deselect any file after picking
            selectedCustomerPhotos.forEach((item, idx) => {
                const f = item.file;
                const row = document.createElement('div');
                row.className = 'photo-selected-item';

                const left = document.createElement('div');
                left.style.display = 'flex';
                left.style.alignItems = 'center';

                // Thumbnail
                const img = document.createElement('img');
                img.src = item.previewUrl || (f && URL.createObjectURL ? URL.createObjectURL(f) : '');
                img.style.width = '48px';
                img.style.height = '48px';
                img.style.objectFit = 'cover';
                img.style.borderRadius = '6px';
                img.style.marginRight = '8px';
                left.appendChild(img);

                const chk = document.createElement('input');
                chk.type = 'checkbox';
                chk.checked = (item.selected !== false);
                chk.style.marginRight = '8px';
                chk.addEventListener('change', function () {
                    selectedCustomerPhotos[idx].selected = this.checked;
                    renderPhotoPreviewList();
                });

                const label = document.createElement('label');
                label.style.cursor = 'pointer';
                label.appendChild(document.createTextNode(`${f.name} (${formatBytes(f.size)}) `));

                left.appendChild(chk);
                left.appendChild(label);

                const removeBtn = document.createElement('button');
                removeBtn.type = 'button';
                removeBtn.className = 'remove-photo';
                removeBtn.textContent = 'Remove';
                removeBtn.addEventListener('click', function () {
                    const url = selectedCustomerPhotos[idx] && selectedCustomerPhotos[idx].previewUrl;
                    selectedCustomerPhotos.splice(idx, 1);
                    try { if (url) URL.revokeObjectURL(url); } catch (e) {}
                    renderPhotoPreviewList();
                });

                row.appendChild(left);
                row.appendChild(removeBtn);
                container.appendChild(row);

                // Validation per-file (only consider checkbox-selected files)
                if (!chk.checked) return;
                if (allowedTypes.indexOf(f.type) === -1) {
                    invalidMessages.push(`${f.name}: invalid file type`);
                } else if (f.size > maxSize) {
                    invalidMessages.push(`${f.name}: file too large (${formatBytes(f.size)})`);
                } else {
                    validNames.push(f.name);
                }
            });

            if (invalidMessages.length > 0) {
                statusEl.textContent = invalidMessages.join(', ');
                statusEl.classList.remove('valid');
                if (saveBtn) saveBtn.disabled = true;
            } else {
                const namesText = validNames.join(', ');
                statusEl.textContent = namesText ? `✓ Selected: ${namesText}` : '';
                if (namesText) statusEl.classList.add('valid'); else statusEl.classList.remove('valid');
                if (saveBtn) saveBtn.disabled = false;
            }
        }

