@section Scripts {
    <script>
        // Get anti-forgery token
        function handleCustomerFormSubmit(event) {
            event.preventDefault();
            const form = event.target;
            const saveBtn = document.getElementById('saveCustomerBtn');
            const originalBtnText = saveBtn.innerHTML;

            // Disable button and show loading state
            saveBtn.disabled = true;
            saveBtn.innerHTML = '💾 Saving...';

            // Clear previous general errors
            const generalErrorContainer = document.getElementById('ajaxErrorContainer'); // Assuming you have this from Groomer page
            if (generalErrorContainer) generalErrorContainer.style.display = 'none';


            // Build FormData but only include selected photos
            const formData = new FormData(form);
            // Remove any files added automatically by FormData for 'Photos'
            try { formData.delete('Photos'); } catch (e) {}

            // Handle empty PetAge to prevent validation errors if backend expects int
            if (formData.has('PetAge') && formData.get('PetAge') === '') {
                formData.delete('PetAge');
            }

            // Append only checked files
            selectedCustomerPhotos.forEach(item => {
                if (item.selected) formData.append('Photos', item.file);
            });

            fetch('@Url.Action("CreateCustomer", "Home")', {
                method: 'POST',
                body: formData,
                headers: {
                    'RequestVerificationToken': getAntiForgeryToken()
                }
            })
            .then(async response => {
                // Read raw response first (clone) so we can handle JSON or HTML gracefully
                const raw = await response.clone().text();
                let data = null;
                try {
                    data = raw ? JSON.parse(raw) : null;
                } catch (err) {
                    data = null;
                }

                // Helper to get the Name value from the form for personalized messages
                const nameInput = form ? form.querySelector('[name="Name"]') : null;
                const addedName = nameInput ? (nameInput.value || '') : '';

                if (data && data.success) {
                    // Success via JSON
                    closeCustomerModal();
                    if (data.warning) {
                        const msg = addedName ? `${addedName} added with warnings: ${data.message}` : `${data.message} Manual password: ${data.tempPass}`;
                        showDynamicAlert(msg, 'warning');
                    } else {
                        const msg = addedName ? `${addedName} has been added successfully.` : (data.message || 'Customer added successfully.');
                        showDynamicAlert(msg, 'success');
                    }
                    setTimeout(() => window.location.reload(), 5000);
                    return;
                }

                // If no JSON, inspect raw/html response to decide
                if (!data) {
                    // If server redirected (common after successful POST), treat as success
                    if (response.redirected || (response.status >= 300 && response.status < 400)) {
                        closeCustomerModal();
                        const msg = addedName ? `${addedName} has been added successfully.` : 'Customer added successfully.';
                        showDynamicAlert(msg, 'success');
                        setTimeout(() => window.location.reload(), 5000);
                        return;
                    }

                    // If HTML contains known validation markers, surface a banner and log raw HTML to console for debugging
                    const lc = (raw || '').toLowerCase();
                    if (lc.includes('validation-summary') || lc.includes('field-validation') || lc.includes('error-message') || lc.includes('modelstate') || lc.includes('asp-validation-for')) {
                        console.warn('Server returned HTML validation response for CreateCustomer:', raw);
                        try { showDynamicAlert('Failed to add customer — check the form for errors.', 'danger'); } catch(e) { alert('Failed to add customer — check the form for errors.'); }
                        // also keep modal open so inline errors (if any) remain visible
                        return;
                    }

                    // Otherwise fallback: log raw and show generic success (server may have redirected without JSON)
                    console.warn('CreateCustomer: unexpected non-JSON response:', raw);
                    try { showDynamicAlert(addedName ? `${addedName} has been added.` : 'Customer added successfully.', 'success'); } catch(e) {}
                    closeCustomerModal();
                    setTimeout(() => window.location.reload(), 5000);
                    return;
                }

                // If we reach here, data exists but data.success is falsy — fall through to error handling below
                if (!(data && data.success)) {
                    // Handle validation errors
                    if (data && data.errors) {
                        // Helper: try multiple id/name variants to find the right error element
                        const findErrorElement = (key) => {
                            if (!key) return null;
                            const candidates = [];
                            candidates.push(`error-${key}`);
                            // strip model prefix like "Pet." or "Customer."
                            candidates.push(`error-${key.replace(/\./g,'-')}`);
                            const simple = key.split('.').pop();
                            candidates.push(`error-${simple}`);
                            // PascalCase version
                            const pascal = simple.charAt(0).toUpperCase() + simple.slice(1);
                            candidates.push(`error-${pascal}`);
                            // also try lowercase
                            candidates.push(`error-${simple.toLowerCase()}`);

                            for (const id of candidates) {
                                const el = document.getElementById(id);
                                if (el) return el;
                            }
                            return null;
                        };

                        const modalBanner = document.getElementById('customerModalErrorBanner');
                        const fallbackMessages = [];
                        for (const fieldName in data.errors) {
                            const msg = data.errors[fieldName];
                            const errorElement = findErrorElement(fieldName);
                            if (errorElement) {
                                errorElement.textContent = msg;
                                errorElement.classList.remove('valid');
                                // Try to highlight related input if present
                                const simple = fieldName.split('.').pop();
                                const inputByName = form.querySelector(`[name="${simple}"]`) || form.querySelector(`#${simple}`) || form.querySelector(`#customer${simple}`);
                                if (inputByName) inputByName.classList.add('is-invalid');
                            } else {
                                // Collect fallback message and log for debugging
                                fallbackMessages.push(msg || 'Validation error');
                                console.warn('Unmapped validation key:', fieldName, 'message:', data.errors[fieldName], 'full response:', data);
                            }
                        }

                        if (fallbackMessages.length > 0) {
                            const text = fallbackMessages.join('\n');
                            if (modalBanner) {
                                modalBanner.textContent = text;
                                modalBanner.style.display = 'block';
                            } else {
                                try { showDynamicAlert(text, 'danger'); } catch(e) { alert(text); }
                            }
                        }
                    } else {
                        // Unknown response — reload to be safe (give user time to see any message)
                        closeCustomerModal();
                        setTimeout(() => window.location.reload(), 5000);
                    }
                }
            })
            .catch(error => {
                console.error('Form submission error:', error);
                alert('An unexpected error occurred. Please try again.');
            })
            .finally(() => {
                // Re-enable button
                saveBtn.disabled = false;
                saveBtn.innerHTML = originalBtnText;
            });
        }

        function getAntiForgeryToken() {
            return document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
        }

        // AJAX Field Validation
        async function validateCustomerField(inputElement) {
            const rawFieldName = inputElement.name; // e.g., "PhoneNumber", "Email", "Name", "IC"
            // Map client field names to server expected validation keys
            const fieldName = (rawFieldName === 'PhoneNumber') ? 'phone' : rawFieldName.toLowerCase();
            const fieldValue = inputElement.value;
            const errorElement = document.getElementById(`error-${rawFieldName}`);

            // Clear previous error
            if (errorElement) errorElement.textContent = '';
            if (errorElement) errorElement.classList.remove('valid');
            inputElement.classList.remove('is-invalid');

            // Basic client-side required check
            if (inputElement.required && !fieldValue.trim()) {
                if (errorElement) errorElement.textContent = `${rawFieldName} is required.`;
                inputElement.classList.add('is-invalid');
                return;
            }

            // Don't validate empty optional fields (like IC)
            if (!inputElement.required && !fieldValue.trim()) {
                return;
            }

            try {
                const response = await fetch('@Url.Action("ValidateCustomerField", "Home")', {
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json',
                        'RequestVerificationToken': getAntiForgeryToken()
                    },
                    body: JSON.stringify({ CustomerId: null, FieldName: fieldName, FieldValue: fieldValue })
                });

                if (!response.ok) {
                    throw new Error('Server validation failed');
                }

                const result = await response.json();
                if (!result.isValid) {
                    if (errorElement) errorElement.textContent = result.errorMessage;
                    inputElement.classList.add('is-invalid');
                } else {
                    // ✅ Show valid message
                    if (errorElement) {
                        errorElement.textContent = '✓ Valid';
                        errorElement.classList.add('valid');
                    }
                }
            } catch (error) {
                console.error('AJAX Validation error:', error);
            }
        }

        // Pet age validation for Add Customer modal (client-side)
        function validatePetAge() {
            const petAgeInput = document.getElementById('petAge');
            const addPetCheckbox = document.getElementById('addPetCheckbox');
            const errorEl = document.getElementById('error-PetAge');
            const saveBtn = document.getElementById('saveCustomerBtn');
            if (!petAgeInput || !errorEl) return true;

            // If pet not being added, clear errors
            if (addPetCheckbox && !addPetCheckbox.checked) {
                errorEl.textContent = '';
                petAgeInput.classList.remove('is-invalid');
                petAgeInput.setCustomValidity('');
                if (saveBtn) saveBtn.disabled = false;
                return true;
            }

            const raw = petAgeInput.value;
            if (raw === null || raw === undefined || raw === '') {
                // empty allowed (user may not fill), but HTML required will catch if necessary
                errorEl.textContent = '';
                errorEl.classList.remove('valid');
                petAgeInput.classList.remove('is-invalid');
                petAgeInput.setCustomValidity('');
                if (saveBtn) saveBtn.disabled = false;
                return true;
            }

            const age = Number(raw);
            if (Number.isNaN(age) || !isFinite(age)) {
                errorEl.textContent = 'Age must be a number.';
                errorEl.classList.remove('valid');
                petAgeInput.classList.add('is-invalid');
                petAgeInput.setCustomValidity('Invalid age');
                if (saveBtn) saveBtn.disabled = true;
                return false;
            }

            if (age < 0) {
                errorEl.textContent = 'Age cannot be negative.';
                errorEl.classList.remove('valid');
                petAgeInput.classList.add('is-invalid');
                petAgeInput.setCustomValidity('Age cannot be negative');
                if (saveBtn) saveBtn.disabled = true;
                return false;
            }

            if (age > 30) {
                errorEl.textContent = 'Age cannot be greater than 30.';
                errorEl.classList.remove('valid');
                petAgeInput.classList.add('is-invalid');
                petAgeInput.setCustomValidity('Age too large');
                if (saveBtn) saveBtn.disabled = true;
                return false;
            }

            // Valid
            errorEl.textContent = '✓ Valid';
            errorEl.classList.add('valid');
            petAgeInput.classList.remove('is-invalid');
            petAgeInput.setCustomValidity('');
            if (saveBtn) saveBtn.disabled = false;
            return true;
        }

