@using PetGroomingAppointmentSystem.Models;
@model List<Customer>

@{
    ViewData["Title"] = "Customer Management";
    ViewData["ActivePage"] = "Customer";
}
@* ========== Alerts ========== *@
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" id="alertMessage">
        <strong>❌ Error:</strong> @ViewData["Error"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" id="alertMessage">
        <strong>❌ Error:</strong> @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" id="alertMessage">
        <strong>✔️ Success:</strong> @TempData["SuccessMessage"]
    </div>
}
@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning" id="alertMessage">
        @TempData["WarningMessage"]
    </div>
}

@section Styles {
    <style>
    /* Status tag for pending password */
    .status-tag.status-pending {
        background-color: #fef3c7;
        color: #d97706;
        border: 1px solid #fbbf24;
    }

    /* New customer badge */
    .new-customer-badge {
        display: inline-block;
        font-size: 10px;
        padding: 2px 8px;
        margin-left: 8px;
        background: linear-gradient(135deg, #fef3c7, #fde68a);
        color: #d97706;
        border-radius: 12px;
        font-weight: 600;
        vertical-align: middle;
        animation: pulse-badge 2s infinite;
    }

    @@keyframes pulse-badge {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }
    }

    /* Info notice styling */
    #newCustomerNotice {
        background: linear-gradient(135deg, #ecfdf5, #d1fae5);
        border-left-color: #10b981;
        color: #065f46;
        margin-bottom: 20px;
    }

    /* Modal header styling */
    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 24px;
        border-bottom: 1px solid #e5e7eb;
        background: linear-gradient(135deg, #d97706, #b45309);
    }

    .modal-title {
        font-size: 18px;
        font-weight: 700;
        color: #ffffff;
        margin: 0;
    }

    .modal-close-btn {
        background: rgba(255,255,255,0.2);
        border: none;
        font-size: 24px;
        cursor: pointer;
        color: #ffffff;
        padding: 0;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .modal-close-btn:hover {
            background: rgba(255,255,255,0.3);
        }

    .modal-body {
        padding: 24px;
        max-height: calc(100vh - 220px);
        overflow-y: auto;
    }

    .modal-footer {
        padding: 16px 24px;
        border-top: 1px solid #e5e7eb;
            background: #f9fafb;
        }

    .error-message {
        color: #dc3545;
        font-size: 12px;
        margin-top: 4px;
        display: block;
        min-height: 15px;
    }

    .error-message.valid {
        color: #28a745; /* Green for valid messages */
    }



</style>
}

@Html.AntiForgeryToken()

<div class="content-header">
    <h1 class="page-title">👥 Customer Management</h1>
    <p class="page-subtitle">Manage all customers and their information</p>
</div>

<!-- Filters Section -->
<div class="panel">
    <h3 class="panel-title">Filter Customers</h3>

    <form method="get" class="form-grid filter-form">
        <div class="form-group">
            <label for="searchName">Search Name</label>
            <input type="text" id="searchName" name="searchName" class="form-control" placeholder="First or Last Name" />
        </div>

        <div class="form-group">
            <label for="searchEmail">Email</label>
            <input type="email" id="searchEmail" name="searchEmail" class="form-control" placeholder="Email address" />
        </div>

        <div class="form-group">
            <label for="searchStatus">Status</label>
            <select id="searchStatus" name="searchStatus" class="form-control">
                <option value="">All Status</option>
                <option value="active">Active</option>
                <option value="pending_password">Pending Password</option>
                <option value="blocked">Blocked</option>
                <option value="inactive">Inactive</option>
            </select>
        </div>

        <div class="form-group">
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary">🔍 Filter</button>
            <button type="reset" class="btn btn-reset">Reset</button>
        </div>
    </form>
</div>

<!-- Customers Table -->
<div class="panel">
    <div class="panel-header-wrapper">
        <h3 class="panel-title">Customers (@Model.Count)</h3>
        <button class="btn btn-primary" onclick="openAddCustomerModal()">➕ New Customer</button>
    </div>

    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        var statusClass = customer.Status switch
                        {
                            "active" => "status-active",
                            "pending_password" => "status-pending",
                            "blocked" => "status-blocked",
                            _ => "status-inactive"
                        };

                        var statusDisplay = customer.Status switch
                        {
                            "pending_password" => "PENDING PASSWORD",
                            _ => customer.Status?.ToUpper()
                        };

                        <tr>
                            <td>
                                <strong>@customer.Name</strong>
                                @if (customer.Status == "pending_password")
                                {
                                    <span class="new-customer-badge" title="Customer needs to set password">🔑 New</span>
                                }
                            </td>
                            <td>@customer.Email</td>
                            <td>@customer.Phone</td>
                            <td>
                                <span class="status-tag @statusClass">@statusDisplay</span>
                            </td>
                            <td>@customer.CreatedAt?.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="action-buttons">
                                    <a href="@Url.Action("CustomerProfile", "Home", new { area = "Admin", customerId = customer.UserId })"
                                       class="btn btn-sm btn-info">
                                        👁️ View
                                    </a>
                                    <button class="btn btn-sm btn-action edit-btn"
                                            onclick="editCustomer('@customer.UserId')">
                                        ✏️ Edit
                                    </button>
                                    <button class="btn btn-sm btn-action delete-btn"
                                            onclick="deleteCustomer('@customer.UserId', '@customer.Name')">
                                        🗑️ Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <p>😢 No customers found. <a href="javascript:openAddCustomerModal()">Create one now</a></p>
        </div>
    }
</div>

<!-- Add/Edit Customer Modal -->
<div id="customerModalOverlay" class="modal-overlay">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="customerModalTitle">➕ Add New Customer</h5>
                <button type="button" class="modal-close-btn" onclick="closeCustomerModal()">×</button>
            </div>

            <form id="customerForm" onsubmit="handleCustomerFormSubmit(event)">
                <div class="modal-body">
                    <!-- Info Notice for New Customers -->
                    <div class="form-section-info" id="newCustomerNotice">
                        📧 A temporary password will be generated and sent to the customer's email.
                        The customer will be required to set a new password on first login.
                    </div>

                    <!-- Tabs -->
                    <div class="modal-tabs">
                        <button type="button" class="modal-tab-btn active" onclick="switchModalTab('customer')">
                            👤 Customer Info
                        </button>
                        <button type="button" class="modal-tab-btn" onclick="switchModalTab('pet')">
                            🐾 Pet (Optional)
                        </button>
                    </div>

                    <!-- Customer Information Tab -->
                    <div id="customer-tab" class="modal-tab-content active">
                        <div class="form-section-title">Basic Information</div>

                        <div class="modal-form-row">
                            <div class="modal-form-group">
                                <label>Full Name <span class="required">*</span></label>
                                <input type="text" id="customerName" name="Name" class="modal-form-input" required placeholder="John Doe" onblur="validateCustomerField(this)"/>
                                <small class="error-message" id="error-Name"></small>
                            </div>
                            <div class="modal-form-group">
                                <label>Email <span class="required">*</span></label>
                                <input type="email" id="customerEmail" name="Email" class="modal-form-input" required placeholder="john@example.com" onblur="validateCustomerField(this)"/>
                                <small class="error-message" id="error-Email"></small>
                            </div>
                        </div>

                        <div class="modal-form-row">
                            <div class="modal-form-group">
                                <label>Phone Number <span class="required">*</span></label>
                                <input type="tel" id="customerPhoneNumber" name="PhoneNumber" class="modal-form-input" required placeholder="012-3456789" onblur="validateCustomerField(this)"/>
                                <small class="error-message" id="error-PhoneNumber"></small>
                            </div>
                            <div class="modal-form-group">
                                <label>IC Number <span class="required">*</span></label>
                                <input type="text" id="customerIC" name="IC" class="modal-form-input" required placeholder="123456-78-9012" onblur="validateCustomerField(this)"/>
                                <small class="error-message" id="error-IC"></small>
                            </div>
                        </div>

                        <div class="form-section-title">Profile Settings</div>

                        <div class="modal-form-row">
                            <div class="modal-form-group">
                                <label>Profile Photo</label>
                                <div class="file-upload-wrapper">
                                    <input type="file" id="customerPhoto" name="PhotoUploads" class="modal-form-input" accept="image/*" multiple />
                                    <span id="photoFileName" class="file-name-display">No files chosen</span>
                                </div>
                                <small class="form-help-text">Max 5MB, PNG/JPG recommended</small>
                            </div>
                        </div>
                    </div>

                    <!-- Pet Information Tab (Optional) -->
                    <div id="pet-tab" class="modal-tab-content">
                        <div class="form-section-info">
                            💡 Adding a pet is optional. You can add pets later from the customer profile.
                        </div>

                        <div class="pet-toggle-wrapper">
                            <label class="toggle-label">
                                <input type="checkbox" id="addPetCheckbox" onchange="togglePetFields()" />
                                <span>Add a pet for this customer</span>
                            </label>
                        </div>

                        <div id="petFields" style="display: none;">
                            <div class="form-section-title">Pet Information</div>

                            <div class="modal-form-row">
                                <div class="modal-form-group">
                                    <label>Pet Name <span class="required">*</span></label>
                                    <input type="text" id="petName" name="PetName" class="modal-form-input" placeholder="Buddy" />
                                </div>
                                <div class="modal-form-group">
                                    <label>Pet Type <span class="required">*</span></label>
                                    <select id="petType" name="PetType" class="modal-form-select">
                                        <option value="">Select Pet Type</option>
                                        <option value="Dog">🐕 Dog</option>
                                        <option value="Cat">🐱 Cat</option>

                                    </select>
                                </div>
                            </div>

                            <div class="modal-form-row">
                                <div class="modal-form-group">
                                    <label>Breed</label>
                                    <input type="text" id="petBreed" name="PetBreed" class="modal-form-input" placeholder="Golden Retriever" />
                                </div>
                                <div class="modal-form-group">
                                    <label>Age (Years)</label>
                                    <input type="number" id="petAge" name="PetAge" class="modal-form-input" min="0" max="50" placeholder="3" />
                                </div>
                            </div>

                            <div class="modal-form-row">
                                <div class="modal-form-group full-width">
                                    <label>Special Notes/Remarks</label>
                                    <textarea id="petRemark" name="PetRemark" class="modal-form-textarea" placeholder="Any special care requirements, allergies, or behaviors..." rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeCustomerModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="saveCustomerBtn">💾 Save Customer</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        // Get anti-forgery token
        function handleCustomerFormSubmit(event) {
            event.preventDefault();
            const form = event.target;
            const saveBtn = document.getElementById('saveCustomerBtn');
            const originalBtnText = saveBtn.innerHTML;

            // Disable button and show loading state
            saveBtn.disabled = true;
            saveBtn.innerHTML = '💾 Saving...';

            // Clear previous general errors
            const generalErrorContainer = document.getElementById('ajaxErrorContainer'); // Assuming you have this from Groomer page
            if (generalErrorContainer) generalErrorContainer.style.display = 'none';


            const formData = new FormData(form);

            fetch('@Url.Action("CreateCustomer", "Home")', {
                method: 'POST',
                body: formData,
                headers: {
                    'RequestVerificationToken': getAntiForgeryToken()
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Success
                    closeCustomerModal();
                    if (data.warning) {
                        // Show a warning if email failed
                        showDynamicAlert(`Warning: ${data.message} Manual password: ${data.tempPass}`, 'warning');
                    } else {
                        showDynamicAlert(data.message, 'success');
                    }
                    // Reload the page after a short delay to show the new customer
                    setTimeout(() => window.location.reload(), 5000);
                } else {
                    // Handle validation errors
                    if (data.errors) {
                        for (const fieldName in data.errors) {
                            const errorElement = document.getElementById(`error-${fieldName}`);
                            if (errorElement) {
                                errorElement.textContent = data.errors[fieldName];
                                const inputElement = document.getElementById(`customer${fieldName}`);
                                if(inputElement) inputElement.classList.add('is-invalid');
                            } else {
                                // Show general errors if a specific field isn't found
                                alert(`Error: ${data.errors[fieldName]}`);
                            }
                        }
                    }
                }
            })
            .catch(error => {
                console.error('Form submission error:', error);
                alert('An unexpected error occurred. Please try again.');
            })
            .finally(() => {
                // Re-enable button
                saveBtn.disabled = false;
                saveBtn.innerHTML = originalBtnText;
            });
        }

        function getAntiForgeryToken() {
            return document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
        }

        // AJAX Field Validation
        async function validateCustomerField(inputElement) {
            const rawFieldName = inputElement.name; // e.g., "PhoneNumber", "Email", "Name", "IC"
            // Map client field names to server expected validation keys
            const fieldName = (rawFieldName === 'PhoneNumber') ? 'phone' : rawFieldName.toLowerCase();
            const fieldValue = inputElement.value;
            const errorElement = document.getElementById(`error-${rawFieldName}`);

            // Clear previous error
            if (errorElement) errorElement.textContent = '';
            if (errorElement) errorElement.classList.remove('valid');
            inputElement.classList.remove('is-invalid');

            // Basic client-side required check
            if (inputElement.required && !fieldValue.trim()) {
                if (errorElement) errorElement.textContent = `${rawFieldName} is required.`;
                inputElement.classList.add('is-invalid');
                return;
            }

            // Don't validate empty optional fields (like IC)
            if (!inputElement.required && !fieldValue.trim()) {
                return;
            }

            try {
                const response = await fetch('@Url.Action("ValidateCustomerField", "Home")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': getAntiForgeryToken()
                    },
                    body: JSON.stringify({ CustomerId: null, FieldName: fieldName, FieldValue: fieldValue })
                });

                if (!response.ok) {
                    throw new Error('Server validation failed');
                }

                const result = await response.json();
                if (!result.isValid) {
                    if (errorElement) errorElement.textContent = result.errorMessage;
                    inputElement.classList.add('is-invalid');
                } else {
                    // ✅ Show valid message
                    if (errorElement) {
                        errorElement.textContent = '✓ Valid';
                        errorElement.classList.add('valid');
                    }
                }
            } catch (error) {
                console.error('AJAX Validation error:', error);
            }
        }

        // Modal Management
        function openAddCustomerModal() {
            document.getElementById('customerModalOverlay').classList.add('show');
            document.body.style.overflow = 'hidden';
            const form = document.getElementById('customerForm');
            form.reset();

            // Clear all validation messages and styles
            form.querySelectorAll('.error-message').forEach(el => {
                el.textContent = '';
                el.classList.remove('valid');
            });
            form.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));

            document.getElementById('customerModalTitle').textContent = '➕ Add New Customer';
            document.getElementById('newCustomerNotice').style.display = 'block';
            switchModalTab('customer');
            resetPetFields();
        }

        function closeCustomerModal() {
            document.getElementById('customerModalOverlay').classList.remove('show');
            document.body.style.overflow = 'auto';
        }

        // Tab Switching
        function switchModalTab(tab) {
            document.getElementById('customer-tab').classList.remove('active');
            document.getElementById('pet-tab').classList.remove('active');

            const buttons = document.querySelectorAll('.modal-tab-btn');
            buttons.forEach(btn => btn.classList.remove('active'));

            if (tab === 'customer') {
                document.getElementById('customer-tab').classList.add('active');
                buttons[0].classList.add('active');
            } else if (tab === 'pet') {
                document.getElementById('pet-tab').classList.add('active');
                buttons[1].classList.add('active');
            }
        }

        // Pet Fields Toggle
        function togglePetFields() {
            const checkbox = document.getElementById('addPetCheckbox');
            const petFields = document.getElementById('petFields');

            if (checkbox.checked) {
                petFields.style.display = 'block';
            } else {
                petFields.style.display = 'none';
                resetPetFields();
            }
        }

        function resetPetFields() {
            document.getElementById('addPetCheckbox').checked = false;
            document.getElementById('petFields').style.display = 'none';
            const form = document.getElementById('customerForm');
            if (form.querySelector('#petName')) form.querySelector('#petName').value = '';
            if (form.querySelector('#petType')) form.querySelector('#petType').value = '';
            if (form.querySelector('#petBreed')) form.querySelector('#petBreed').value = '';
            if (form.querySelector('#petAge')) form.querySelector('#petAge').value = '';
            if (form.querySelector('#petRemark')) form.querySelector('#petRemark').value = '';
        }

        // File Upload Display
        document.getElementById('customerPhoto')?.addEventListener('change', function() {
            const files = Array.from(this.files || []);
            const display = document.getElementById('photoFileName');
            if (!display) return;
            if (files.length ===0) {
                display.textContent = 'No files chosen';
            } else if (files.length ===1) {
                display.textContent = files[0].name;
            } else {
                display.textContent = `${files.length} files selected`;
            }
        });

        // Auto-format phone input (attach to correct element id)
        document.getElementById('customerPhoneNumber')?.addEventListener('input', function(e) {
            autoFormatInput(this, [{ len:3, char: '-' }, { len:8, char: '' }]);
        });


        // Customer Actions
        function editCustomer(customerId) {
            window.location.href = `/Admin/Home/CustomerProfile?customerId=${customerId}`;
        }

        function deleteCustomer(customerId, customerName) {
            if (confirm(`Are you sure you want to delete ${customerName}? This action cannot be undone.`)) {
                fetch(`/Admin/Home/DeleteCustomer`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': getAntiForgeryToken()
                    },
                    body: `customerId=${encodeURIComponent(customerId)}`
                })
                .then(response => {
                    if (response.ok || response.redirected) {
                        alert(`${customerName} has been deleted successfully.`);
                        location.reload();
                    } else {
                        alert('Failed to delete customer. Please try again.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the customer.');
                });
            }
        }

        // Close modal on overlay click
        document.getElementById('customerModalOverlay')?.addEventListener('click', function(e) {
            if (e.target === this) closeCustomerModal();
        });

        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') closeCustomerModal();
        });
        // Auto-hide alert message after 5 seconds

        // ==================================================
        // == Auto-formatting for IC and Phone with cursor handling ==
        // ==================================================
        function autoFormatInput(input, formatPatterns) {
            let originalValue = input.value;
            let originalCursorPos = input.selectionStart;
            let digitsOnly = originalValue.replace(/\D/g, '');
            let digitsBeforeCursor = (originalValue.substring(0, originalCursorPos).replace(/\D/g, '')).length;

            let formattedValue = '';
            let digitIndex = 0;
            let newCursorPos = originalCursorPos;

            for (const pattern of formatPatterns) {
                if (digitIndex >= digitsOnly.length) break;
                let segment = digitsOnly.substring(digitIndex, digitIndex + pattern.len);
                formattedValue += segment;
                if (segment.length === pattern.len && digitsOnly.length > digitIndex + pattern.len) {
                    formattedValue += pattern.char;
                }
                digitIndex += pattern.len;
            }

            input.value = formattedValue;

            // Recalculate cursor position
            let finalCursorPos = 0;
            let digitsCounted = 0;
            for (let i = 0; i < input.value.length && digitsCounted < digitsBeforeCursor; i++) {
                finalCursorPos++;
                if (/\d/.test(input.value[i])) {
                    digitsCounted++;
                }
            }
            input.setSelectionRange(finalCursorPos, finalCursorPos);
        }

        document.getElementById('customerIC')?.addEventListener('input', function(e) {
            autoFormatInput(this, [{ len: 6, char: '-' }, { len: 2, char: '-' }, { len: 4, char: '' }]);
        });

        document.getElementById('customerPhone')?.addEventListener('input', function(e) {
            autoFormatInput(this, [{ len: 3, char: '-' }, { len: 8, char: '' }]); // This will now apply to customerPhoneNumber
        });


    (function () {
        const alertMessage = document.getElementById('alertMessage');
        if (!alertMessage) return;

        setTimeout(function () {
            alertMessage.classList.add('fade-out');
            setTimeout(function () {
                if (alertMessage && alertMessage.parentNode) {
                    alertMessage.parentNode.removeChild(alertMessage);
                }
            }, 500);
        }, 5000);
    })();

    function showDynamicAlert(message, type) {
        try {
            // Remove existing dynamic alert if present
            const existing = document.getElementById('dynamicAlert');
            if (existing) existing.remove();

            const alertDiv = document.createElement('div');
            alertDiv.id = 'dynamicAlert';
            const bsClass = type === 'success' ? 'alert-success' : (type === 'warning' ? 'alert-warning' : 'alert-danger');
            alertDiv.className = `alert ${bsClass}`;
            alertDiv.setAttribute('role', 'alert');
            alertDiv.style.position = 'fixed';
            alertDiv.style.top = '20px';
            alertDiv.style.left = '50%';
            alertDiv.style.transform = 'translateX(-50%)';
            alertDiv.style.zIndex = '22000';
            alertDiv.style.minWidth = '300px';
            alertDiv.style.boxShadow = '06px20px rgba(0,0,0,0.12)';
            alertDiv.style.borderRadius = '8px';
            alertDiv.style.padding = '12px18px';
            alertDiv.innerHTML = `<strong>${type === 'success' ? '✔️ Success' : (type === 'warning' ? '⚠️ Warning' : '❌ Error')}:</strong> ${message}`;

            document.body.appendChild(alertDiv);

            // Auto hide after5 seconds
            setTimeout(() => {
                if (alertDiv) {
                    alertDiv.classList.add('fade-out');
                    alertDiv.style.transition = 'opacity0.4s ease, transform0.4s ease';
                    alertDiv.style.opacity = '0';
                    alertDiv.style.transform = 'translateX(-50%) translateY(-10px)';
                    setTimeout(() => { alertDiv.remove(); },450);
                }
            },5000);
        } catch (e) {
            console.error('showDynamicAlert error:', e);
        }
    }

    </script>
}
