<div class="content-header">
    <h1 class="page-title">Generate Reports</h1>
</div>

<div class="panel">
    <h3 class="panel-title">Report Filters</h3>
    <form id="reportFilterForm" class="form-grid filter-form">
        <div class="form-group">
            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="reportType">Report Type</label>
            <select id="reportType" name="reportType" class="form-control">
                <option value="volume">Appointment Volume</option>
                <option value="workload">Groomer Workload</option>
                <option value="topCustomers">Top Customers</option>
                <option value="redeemGifts">Redeem Gifts (Stock)</option>
            </select>
        </div>
        <div class="form-group">
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary">Generate Report</button>
            <button type="reset" class="btn btn-reset">Reset</button>
        </div>
    </form>
</div>

<div id="reportResultContainer">
    <div class="placeholder-text">
        <i class="material-icons" style="font-size: 48px; margin-bottom: 10px;">assessment</i>
        <p>Select your filters and click "Generate Report" to see the data.</p>
    </div>
</div>

@section Scripts {
    <script>
        jQuery(document).ready(function () {
            var today = new Date();
            var startOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);

            // 初始化日期
            jQuery('#startDate').val(startOfMonth.toISOString().split('T')[0]);
            jQuery('#endDate').val(today.toISOString().split('T')[0]);

            // 根据报表类型禁用日期输入
            jQuery('#reportType').on('change', function () {
                var v = jQuery(this).val();
                if (v === 'redeemGifts') {
                    jQuery('#startDate, #endDate').prop('disabled', true).prop('required', false);
                } else {
                    jQuery('#startDate, #endDate').prop('disabled', false).prop('required', true);
                }
            });

            // 生成报表
            jQuery('#reportFilterForm').on('submit', function (e) {
                e.preventDefault();
                var startDate = jQuery('#startDate').val();
                var endDate = jQuery('#endDate').val();
                var reportType = jQuery('#reportType').val();

                if (reportType !== 'redeemGifts' && (!startDate || !endDate)) {
                    alert('Please select both a start and end date.');
                    return;
                }

                jQuery('#reportResultContainer').html('<div class="placeholder-text"><p>Generating report...</p></div>');

                jQuery.ajax({
                    url: '@generateReportDataUrl',
                    type: 'GET',
                    data: { startDate: startDate, endDate: endDate, reportType: reportType },
                    success: function (response) {
                        if (response.success) {
                            renderReport(response.data);
                        } else {
                            var errorMsg = (response.message || 'Unknown error').replace(/[<>]/g, '');
                            jQuery('#reportResultContainer').html('<div class="placeholder-text"><p>Error: ' + errorMsg + '</p></div>');
                        }
                    },
                    error: function () {
                        jQuery('#reportResultContainer').html('<div class="placeholder-text"><p>An unexpected error occurred.</p></div>');
                    }
                });
            });

            // 重置表单
            jQuery('#reportFilterForm button[type="reset"]').on('click', function (e) {
                e.preventDefault();
                jQuery('#reportFilterForm')[0].reset();
                var today = new Date();
                var startOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);
                jQuery('#startDate').val(startOfMonth.toISOString().split('T')[0]);
                jQuery('#endDate').val(today.toISOString().split('T')[0]);
                jQuery('#reportResultContainer').html('<div class="placeholder-text"><i class="material-icons" style="font-size: 48px; margin-bottom: 10px;">assessment</i><p>Select your filters and click "Generate Report" to see the data.</p></div>');
            });

            // 渲染报表
            function renderReport(data) {
                var content = '';
                var currentReportType = jQuery('#reportType').val();

                content += '<div class="report-actions">';
                content += '<button id="downloadPdfBtn" class="btn btn-action"><i class="material-icons" style="font-size:18px;vertical-align:middle;margin-right:4px;">picture_as_pdf</i> Download PDF</button>';
                content += '<button id="downloadExcelBtn" class="btn btn-action"><i class="material-icons" style="font-size:18px;vertical-align:middle;margin-right:4px;">grid_on</i> Download Excel (CSV)</button>';
                content += '</div>';
                content += '<div id="reportContent">';

                var dateLabel = (data.startDate && data.endDate) ? 'from ' + data.startDate + ' to ' + data.endDate : 'Current Stock';
                var summaryLabel = (currentReportType === 'redeemGifts') ? 'Total Gift Types' : 'Total Appointments ' + dateLabel;

                content += '<div class="report-card summary-card">';
                content += '<div class="summary-value">' + escapeHtml(String(data.totalAppointments || 0)) + '</div>';
                content += '<div class="summary-label">' + escapeHtml(summaryLabel) + '</div>';
                content += '</div>';

                if (data.groupedData) {
                    for (var groupName in data.groupedData) {
                        if (data.groupedData.hasOwnProperty(groupName)) {
                            var items = data.groupedData[groupName];
                            content += '<div class="report-card">';
                            content += '<h4 class="report-title">' + escapeHtml(groupName) + '</h4>';
                            content += '<div class="report-body">';

                            if (items && items.length > 0) {
                                for (var i = 0; i < items.length; i++) {
                                    var item = items[i];
                                    var outClass = (item.value === 0) ? 'out-of-stock' : '';
                                    content += '<div class="report-item ' + outClass + '">';
                                    content += '<span class="item-label">' + escapeHtml(item.label) + '</span>';
                                    content += '<span class="item-value">' + escapeHtml(String(item.value)) + '</span>';
                                    content += '</div>';
                                }
                            } else {
                                content += '<p class="text-muted text-center">No data available for this group.</p>';
                            }
                            content += '</div></div>';
                        }
                    }
                }

                content += '</div>';
                jQuery('#reportResultContainer').html(content);
            }

            // HTML escape
            function escapeHtml(text) {
                var map = { '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#039;' };
                return text.replace(/[&<>\"']/g, function (m) { return map[m]; });
            }

            // PDF 下载
            window.generatePDFFromReport = function () {
                var reportContent = document.getElementById('reportContent');
                if (!reportContent) return alert('No report content found');

                // Create wrapper with reduced top padding to avoid large blank space in PDF
                var pdfWrapper = document.createElement('div');
                pdfWrapper.style.width = '100%';
                pdfWrapper.style.maxWidth = '740px';
                pdfWrapper.style.margin = '0 auto';
                // add a bit more top padding so header/logo isn't flush to the page edge
                pdfWrapper.style.padding = '8px 8px 8px';
                pdfWrapper.style.boxSizing = 'border-box';
                pdfWrapper.style.background = '#fff';
                pdfWrapper.style.fontFamily = 'Helvetica, Arial, sans-serif';
                pdfWrapper.style.color = '#111';

                var header = document.createElement('div');
                header.style.margin = '6px 0 4px 0';
                header.style.textAlign = 'center';
                var logoUrl = window.location.origin + '/Customer/img/logo2.png';
                header.innerHTML = `<img src="${logoUrl}" alt="Logo" style="max-width:120px;display:block;margin:0 auto 8px;" />\n                                    <h2 style="margin:0;padding:0;font-size:20px;line-height:1">Hajimi Pet Grooming System</h2>\n                                    <p style="font-size:11px;color:#777;margin:2px 0 0 0;padding:0">${jQuery('#reportType option:selected').text()} Report - Generated: ${new Date().toLocaleString()}</p>`;
                pdfWrapper.appendChild(header);

                // Inject a small print-specific stylesheet to normalize appearance in the PDF (use template literal)
                var pdfStyle = document.createElement('style');
                pdfStyle.type = 'text/css';
                pdfStyle.appendChild(document.createTextNode(`
                                    /* PDF reset and polish */
                                    html, body { background: #fff !important; color: #111 !important; font-family: Helvetica, Arial, sans-serif !important; }
                                    .report-actions, .btn, form, .panel { display: none !important; }
                                    /* Card appearance */
                                    .report-card, .summary-card { box-shadow: none !important; background: #fff !important; border-radius: 8px !important; border: 1px solid #eee !important; padding: 10px !important; }
                                    .report-card + .report-card { margin-top: 12px !important; }
                                    .report-title { font-size: 16px !important; font-weight: 700 !important; margin: 0 0 8px 0 !important; }
                                    /* Summary styling */
                                    .summary-card { background: #f7fafc !important; padding: 14px 12px !important; text-align: center !important; }
                                    .summary-value { font-size: 34px !important; font-weight: 700 !important; color: #d97706 !important; margin: 6px 0 !important; display:block !important; }
                                    .summary-label { font-size: 13px !important; color: #4b5563 !important; margin: 0 !important; }
                                    /* Report items layout */
                                    .report-card .report-item { display: flex !important; justify-content: space-between !important; align-items: center !important; padding: 10px 6px !important; border-bottom: 1px solid #f1f5f9 !important; }
                                    .report-card .report-item:last-child { border-bottom: none !important; }
                                    .report-card .report-item .item-label { flex: 1 1 auto !important; padding-right: 8px !important; color: #4b5563 !important; }
                                    .report-card .report-item .item-value { flex: 0 0 auto !important; text-align: right !important; color: #d97706 !important; font-weight:700 !important; }
                                    h1,h2,h3,h4,h5,h6,p { margin-top: 0 !important; margin-bottom: 6px !important; color: #111 !important; }
                                    img { max-width: 100% !important; height: auto !important; }
                                    /* Allow report cards to split across pages so long lists (Pet Type) show completely */
                                    .summary-card { page-break-inside: avoid !important; break-inside: avoid !important; }
                                    /* Logo sizing for PDF */
                                    .logo, .logo-img { display: block !important; max-height: 60px !important; }
                                `));
                pdfWrapper.appendChild(pdfStyle);

                // Clone the content and normalize margins/padding to prevent extra whitespace
                var clone = reportContent.cloneNode(true);
                clone.style.margin = '0';
                clone.style.padding = '0';
                clone.style.boxSizing = 'border-box';
                clone.style.width = '100%';
                // Reduce margins for headings and paragraphs inside clone
                var elems = clone.querySelectorAll('h1,h2,h3,h4,h5,h6,p,.report-card,.summary-card,.report-title');
                for (var i = 0; i < elems.length; i++) {
                    elems[i].style.marginTop = '0';
                    elems[i].style.marginBottom = '4px';
                    elems[i].style.boxSizing = 'border-box';
                    if (elems[i].classList && elems[i].classList.contains('report-card')) {
                        elems[i].style.padding = elems[i].style.padding || '10px';
                    }
                    if (elems[i].classList && elems[i].classList.contains('summary-card')) {
                        elems[i].style.paddingTop = '6px';
                        elems[i].style.paddingBottom = '6px';
                    }
                }

                pdfWrapper.appendChild(clone);

                // Use pagination and a moderate scale so long content splits across pages instead of being clipped
                html2pdf().from(pdfWrapper).set({
                    margin: [0.02, 0.02, 0.04, 0.02],
                    filename: 'Report_' + jQuery('#reportType option:selected').text().replace(/\s+/g, '_') + '.pdf',
                    image: { type: 'jpeg', quality: 0.98 },
                    html2canvas: { scale: 1, useCORS: true },
                    jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' },
                    pagebreak: { mode: ['css', 'legacy'] }
                }).save();
            };

            jQuery(document).on('click', '#downloadPdfBtn', function () {
                window.generatePDFFromReport();
            });

            // Excel 下载
            window.downloadReportExcel = function () {
                var startDate = jQuery('#startDate').val();
                var endDate = jQuery('#endDate').val();
                var reportType = jQuery('#reportType').val();
                var downloadUrl = (reportType === 'redeemGifts')
                    ? '@downloadRedeemGiftsUrl'
                    : '@downloadReportUrl' + '?reportType=' + encodeURIComponent(reportType) + '&startDate=' + encodeURIComponent(startDate) + '&endDate=' + encodeURIComponent(endDate);
                window.location.href = downloadUrl;
            };

            jQuery(document).on('click', '#downloadExcelBtn', function () {
                window.downloadReportExcel();
            });
        });
    </script>
}