@{
    ViewData["Title"] = "About Us Management";
    ViewData["ActivePage"] = "aboutUs";
}
<div class="content-header">
    <h1 class="page-title">About Us Management</h1>
</div>
<div class="container" style="max-width:1100px; margin:auto; padding:40px 0;">


    <!-- HERO SECTION EDIT  -->
    <div class="panel" style="padding:25px; margin-bottom:30px; border-radius:12px; background:#fff;">
        <h3 style="font-weight:600; margin-bottom:20px;">Hero Section</h3>

        <div class="form-group" style="margin-bottom:15px;">
            <label>Main Title</label>
            <input type="text" class="form-control" placeholder="We look after your pet" />
        </div>

        <div class="form-group" style="margin-bottom:15px;">
            <label>Highlight Title (Bold Line)</label>
            <input type="text" class="form-control" placeholder="Just like you do" />
        </div>

        <div class="form-group" style="margin-bottom:15px;">
            <label>Description</label>
            <textarea class="form-control" rows="4"
                      placeholder="With a focus on convenience and quality care..."></textarea>
        </div>

        <div class="form-group" style="margin-bottom:15px;">
            <label>Hero Image (Cat Image)</label><br />
            <input type="file" />
        </div>
    </div>


    <!-- OUR TEAM SECTION -->
    <div class="panel" style="padding:25px; margin-bottom:30px; border-radius:12px; background:#fff;">
        <h3 style="font-weight:600; margin-bottom:20px;">Our Team Section</h3>

        <div class="form-group" style="margin-bottom:15px;">
            <label>Section Title</label>
            <input type="text" class="form-control" placeholder="Our Team" />
        </div>

        <div class="form-group" style="margin-bottom:15px;">
            <label>Section Subtitle</label>
            <textarea class="form-control" rows="2"
                      placeholder="Our passionate team of pet lovers is dedicated to providing gentle, professional care..."></textarea>
        </div>

        <hr />

        <h4 style="font-weight:600; margin-top:20px;">Team Members</h4>

        <div style="margin-bottom:20px;">
            <button class="btn btn-success">+ Add New Member</button>
        </div>

        <!-- SAMPLE TEAM CARD EDIT UI -->
        <div class="team-edit-card"
             style="padding:20px; border-radius:10px; background:#f8f9fa; margin-bottom:20px;">

            <h5 style="font-weight:600;">Team Member 1</h5>

            <div class="form-group" style="margin-bottom:10px;">
                <label>Name</label>
                <input type="text" class="form-control" placeholder="Rala Emaia" />
            </div>

            <div class="form-group" style="margin-bottom:10px;">
                <label>Position</label>
                <input type="text" class="form-control" placeholder="Senior Director" />
            </div>

            <div class="form-group" style="margin-bottom:10px;">
                <label>Member Photo</label><br />
                <input type="file" />
            </div>

            <button class="btn btn-danger">Remove Member</button>
        </div>

        <!-- Duplicate this block for more members dynamically -->
    </div>


    <!-- SAVE BUTTON -->
    <div style="text-align:right; margin-top:20px;">
        <button class="btn btn-primary" style="padding:10px 25px; font-size:16px;">
            Save Changes
        </button>
    </div>

</div>
