
@{
    // Title for the browser tab
    ViewData["Title"] = "Groomer Management";
    // Key used to highlight the sidebar link (Assuming "Groomers" is the key)
    ViewData["ActivePage"] = "Groomer";
}

<div class="content-header">
    <h1 class="page-title">Groomer Management</h1>

</div>

<div class="panel">
    <h3 class="panel-title">Existing Groomers</h3>

    <div class="actions">
        <button class="btn btn-primary" onclick="showCreateForm()">Add New Groomer</button>
    </div>

    <table class="data-table">
        <thead>
            <tr>
                <th>Groomer ID</th>
                <th>Name</th>
                <th>Specialty</th>
                <th>Status</th>
                <th>Contact</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            

