    </table>
</div>

<div class="panel create-form" id="createGroomerForm">
    <h3 class="panel-title">Create New Groomer</h3>

    <form asp-controller="Groomer" asp-action="Create" method="post" class="form-grid">

        <!-- Groomer Name -->
        <div class="form-group">
            <label for="fullName">Full Name</label>
            <input type="text" id="fullName" name="FullName" required />
        </div>

        <!-- Email Address -->
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="Email" required />
        </div>

        <!-- Phone Number -->
        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="PhoneNumber" placeholder="012-3456789" required />
        </div>

        <!-- Experience (in years) -->
        <div class="form-group">
            <label for="experience">Experience (Years)</label>
            <input type="number" id="experience" name="ExperienceYears" min="0" max="50" required />
        </div>

        <!-- Specialty -->
        <div class="form-group full-width">
            <label for="specialty">Specialty</label>
            <input type="text" id="specialty" name="Specialty" placeholder="e.g., Cat Grooming, Senior Care, Styling" required />
        </div>

        <!-- Notes (optional) -->
        <div class="form-group full-width">
            <label for="notes">Notes</label>
            <textarea id="notes" name="Notes" rows="3"></textarea>
        </div>

        <!-- Save Button -->
        <div class="form-actions">
            <button type="submit" class="btn btn-success">Save Groomer</button>
        </div>
    </form>
</div>



@section Scripts {
    <script>
        // Simple JavaScript function to show/hide the create form
        // (You may need to hide this form by default using CSS)
        function showCreateForm() {
            var form = document.getElementById('createGroomerForm');
            form.style.display = 'block';
        }

        // Initially hide the form on load, if desired
        document.addEventListener('DOMContentLoaded', function() {
            var form = document.getElementById('createGroomerForm');
            if(form) form.style.display = 'none';
        });
    </script>
}