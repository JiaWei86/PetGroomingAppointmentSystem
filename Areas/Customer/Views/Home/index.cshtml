@section Scripts {
    <script src="~/Customer/js/wow.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize WOW animations
            new WOW().init();

            // Initialize all service carousels
            var carouselConfig = {
                items: 3,
                loop: true,
                margin: 18,
                autoplay: true,
                autoplayTimeout: 4000,
                autoplayHoverPause: true,
                responsive: {
                    0: { items: 1 },
                    768: { items: 2 },
                    1200: { items: 3 }
                }
            };

            $(".service-carousel").owlCarousel(carouselConfig);

            // Initialize price list carousel (single item)
            $(".price-list-carousel").owlCarousel({
                items: 1,
                loop: true,
                margin: 0,
                autoplay: true,
                autoplayTimeout: 5000,
                autoplayHoverPause: true,
                responsive: {
                    0: { items: 1 },
                    768: { items: 1 },
                    1200: { items: 1 }
                }
            });

            // Fix carousel card heights responsively
            function setCarouselHeights() {
                $(".service-carousel").each(function () {
                    var maxHeight = 0;
                    $(this).find(".single_service").each(function () {
                        var height = $(this).height();
                        if (height > maxHeight) maxHeight = height;
                    });
                    $(this).find(".single_service").height(maxHeight);
                });
            }

            // Set heights on load and window resize
            setCarouselHeights();
            $(window).on('resize', function () {
                setCarouselHeights();
            });
        });
    </script>
}

