@using PetGroomingAppointmentSystem.Models
@model List<Staff>

@{
    ViewData["Title"] = "About Us";
}

<!-- bradcam_area_start -->
<div class="bradcam_area breadcam_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcam_text text-center wow fadeInUp" data-wow-delay="0.2s">
                    <h3>About Hajimi House</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- bradcam_area_end -->
<!-- pet_care_area_start -->
<section class="pet_care_area py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 col-md-6">
                <div class="pet_thumb wow fadeInLeft" data-wow-delay="0.3s">
                    <img src="~/Customer/img/about/pet_care.png" alt="Pet Care" loading="lazy" decoding="async">
                </div>
            </div>
            <div class="col-lg-6 offset-lg-1 col-md-6">
                <div class="pet_info wow fadeInRight" data-wow-delay="0.3s">
                    <div class="section_title">
                        <h3>
                            <span>We look after your pet</span> <br>
                            Just like you do
                        </h3>
                        <p>
                            With a focus on convenience and quality care, Hajimi House makes scheduling appointments simple—so your pets can receive top-notch grooming while you enjoy peace of mind.<br><br>
                            We treat every pet as part of our family, helping them look great, feel comfortable, and stay healthy. Our team combines expertise with genuine love for animals, ensuring every grooming session is a positive experience.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- pet_care_area_end -->
<!-- why_choose_us_start -->
<section class="service_area py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="section_title text-center mb-95 wow fadeInUp" data-wow-delay="0.2s">
                    <h3>Why Choose Us?</h3>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="single_service wow fadeInUp" data-wow-delay="0.1s">
                    <div class="service_content text-center">
                        <h3>Pet-Centric Care</h3>
                        <p>We prioritize your pet's comfort, safety, and well-being throughout every grooming service.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="single_service wow fadeInUp" data-wow-delay="0.2s">
                    <div class="service_content text-center">
                        <h3>Professional Expertise</h3>
                        <p>Our highly trained groomers have years of experience handling pets of all breeds and temperaments.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="single_service wow fadeInUp" data-wow-delay="0.3s">
                    <div class="service_content text-center">
                        <h3>Convenient Scheduling</h3>
                        <p>Enjoy hassle-free online booking and convenient time options that adapt to your lifestyle and schedule.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- why_choose_us_end -->
<!-- team_area_start -->
<section class="team_area py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="section_title text-center mb-5">
                    <h3>Meet Our Expert Team</h3>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            @foreach (var s in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single_team wow fadeInUp" data-wow-delay="0.2s">

                        <!-- IMAGE -->
                        <div class="thumb">
                            <img src="@Url.Content(s.Photo)"
                                 alt="@s.Name"
                                 loading="lazy"
                                 decoding="async">
                        </div>

                        <!-- NAME & POSITION -->
                        <div class="member_name text-center">
                            <div class="mamber_inner">
                                <h4>@s.Name</h4>
                                <p>@s.Position</p>
                                <p>Year of Experience: @s.ExperienceYear</p>
                            </div>
                        </div>

                        <!-- DESCRIPTION -->
                        <p style="padding: 15px; text-align: center; font-size: 14px;">
                            @s.Description
                        </p>

                    </div>
                </div>
            }
        </div>

    </div>
</section>
<!-- team_area_end -->
<!-- cta_section_start -->
<section class="service_area py-5" style="background: linear-gradient(135deg, #ff3500 0%, #ff5733 100%); color: white;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center wow fadeInUp" data-wow-delay="0.2s">
                <h2 style="margin-bottom: 20px; color: white; font-weight: 700;">Ready to Pamper Your Pet?</h2>
                <p style="font-size: 18px; margin-bottom: 30px; color: rgba(255,255,255,0.95);">
                    Schedule your pet's grooming appointment today and experience the Hajimi House difference!
                </p>
            </div>
        </div>
    </div>
</section>
<!-- cta_section_end -->