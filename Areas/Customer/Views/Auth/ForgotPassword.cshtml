@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
    
    bool codeSent = ViewData["CodeSent"] != null && (bool)ViewData["CodeSent"];
    string email = ViewData["Email"]?.ToString() ?? "";
    string phone = ViewData["Phone"]?.ToString() ?? "";
    
    // ✅ 新增：检查是否有错误信息
    bool hasError = ViewData["Error"] != null;
    bool hasSuccess = ViewData["Success"] != null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/Customer/css/auth.css" />
    <style>
        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        .error-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: none;
        }

            .error-message.show {
                display: block;
            }

        .success-message {
            color: #28a745;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: none;
        }

            .success-message.show {
                display: block;
            }

        .form-hint {
            color: #6c757d;
            font-size: 0.8rem;
            margin-top: 0.25rem;
        }

        .form-group input[type="text"],
        .form-group input[type="email"],
        .form-group input[type="password"] {
            transition: all 0.3s ease;
            border: 1px solid #ced4da;
            background-color: #fff;
            padding: 10px 12px;
            width: 100%;
            border-radius: 4px;
            font-size: 1rem;
        }

        .form-group input:disabled {
            background-color: #e9ecef;
            border-color: #dee2e6;
            color: #6c757d;
        }

        .form-group.has-error input {
            border-color: #dc3545;
            background-color: #fff5f5;
        }

        .form-group.has-success input {
            border-color: #28a745;
            background-color: #f5fff9;
        }

        .btn-submit {
            width: 100%;
            padding: 12px;
            background-color: #ff8800;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

            .btn-submit:hover:not(:disabled) {
                background-color: #e67e00;
            }

            .btn-submit:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }

        .alert {
            padding: 12px 16px;
            border-radius: 4px;
            margin-bottom: 20px;
            animation: slideDown 0.3s ease-out;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-info {
            background-color: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
        }

        .links-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            font-size: 0.95rem;
            margin-top: 15px;
            text-align: center;
        }

            .links-container a {
                color: #ff8800;
                text-decoration: none;
                font-weight: 500;
            }

                .links-container a:hover {
                    text-decoration: underline;
                }

        .step-indicator {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
            position: relative;
        }

        .step-indicator::before {
            content: '';
            position: absolute;
            top: 20px;
            left: 0;
            right: 0;
            height: 2px;
            background-color: #e9ecef;
            z-index: 0;
        }

        .step {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            z-index: 1;
            flex: 1;
        }

        .step-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: #6c757d;
            margin-bottom: 10px;
            border: 2px solid #e9ecef;
        }

        .step.active .step-circle {
            background-color: #ff8800;
            color: white;
            border-color: #ff8800;
        }

        .step.completed .step-circle {
            background-color: #28a745;
            color: white;
            border-color: #28a745;
        }

        .step-label {
            font-size: 0.85rem;
            color: #6c757d;
            text-align: center;
            font-weight: 500;
        }

        .step.active .step-label {
            color: #ff8800;
            font-weight: 600;
        }

        .step.completed .step-label {
            color: #28a745;
        }

        .form-section {
            display: none;
        }

            .form-section.active {
                display: block;
            }

        .resend-container {
            text-align: center;
            margin-top: 15px;
        }

        .resend-timer {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .resend-link {
            color: #ff8800;
            text-decoration: none;
            cursor: pointer;
            font-weight: 500;
        }

            .resend-link:hover {
                text-decoration: underline;
            }

            .resend-link:disabled {
                color: #ccc;
                cursor: not-allowed;
            }

        .account-check-tips {
            background-color: #fff3cd;
            border: 1px solid #ffeeba;
            color: #856404;
            padding: 12px;
            border-radius: 4px;
            margin-bottom: 15px;
            font-size: 0.9rem;
        }

            .account-check-tips ul {
                margin: 8px 0;
                padding-left: 20px;
            }

            .account-check-tips li {
                margin: 4px 0;
            }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-box">
            <div class="auth-header">
                <h1>Reset Password</h1>
                <p>Recover your account access</p>
            </div>

            @* ✅ 显示错误消息 *@
            @if (hasError)
            {
                <div class="alert alert-danger">
                    <strong>Error:</strong> @ViewData["Error"]
                </div>
            }

            @* ✅ 显示成功消息 *@
            @if (hasSuccess)
            {
                <div class="alert alert-success">
                    <strong>Success!</strong> @ViewData["Success"]
                </div>
            }

            <!-- Step Indicator -->
            <div class="step-indicator">
                <div class="step @(codeSent ? "completed" : "active")">
                    <div class="step-circle">1</div>
                    <div class="step-label">Enter Details</div>
                </div>
                <div class="step @(codeSent ? "active" : "")">
                    <div class="step-circle">2</div>
                    <div class="step-label">Verify Code</div>
                </div>
                <div class="step">
                    <div class="step-circle">3</div>
                    <div class="step-label">New Password</div>
                </div>
            </div>

            <!-- SECTION 1: Enter Phone and Email -->
            <form id="resetForm" method="post">
                <div class="form-section @(!codeSent ? "active" : "")">
                    @* ✅ 新增：如果有错误，显示账户检查提示 *@
                    @if (hasError && !codeSent)
                    {
                        <div class="account-check-tips">
                            <strong><i class="bi bi-info-circle"></i> Please verify:</strong>
                            <ul>
                                <li>Phone number and email belong to the same account</li>
                                <li>Phone number format: 012-3456789 or 0123456789</li>
                                <li>Email address matches your registered email exactly</li>
                            </ul>
                        </div>
                    }

                    <div class="form-group">
                        <label for="phoneNumber">PHONE NUMBER</label>
                        <input type="text" 
                               id="phoneNumber" 
                               name="phoneNumber" 
                               placeholder="Enter your phone number"
                               value="@phone"
                               maxlength="13"
                               inputmode="numeric"
                               @(codeSent ? "disabled" : "") />
                        <div class="form-hint">Accepts: 012-3456789 or 0123456789</div>
                        <div class="error-message" id="phoneNumberError"></div>
                    </div>

                    <div class="form-group">
                        <label for="email">EMAIL ADDRESS</label>
                        <input type="email" 
                               id="email" 
                               name="email" 
                               placeholder="Enter your email address"
                               value="@email"
                               @(codeSent ? "disabled" : "") />
                        <div class="error-message" id="emailError"></div>
                    </div>

                    <input type="hidden" id="actionInput" name="action" value="send" />
                    <button type="submit" class="btn-submit" id="sendCodeBtn" @(codeSent ? "disabled" : "")>
                        SEND VERIFICATION CODE
                    </button>
                </div>

                <!-- SECTION 2: Enter Verification Code -->
                <div class="form-section @(codeSent ? "active" : "")">
                    <p style="text-align: center; color: #6c757d; margin-bottom: 20px;">
                        A verification code has been sent to <strong>@email</strong>
                    </p>

                    <div class="form-group">
                        <label for="verificationCode">VERIFICATION CODE</label>
                        <input type="text" 
                               id="verificationCode" 
                               name="verificationCode" 
                               placeholder="Enter the 6-digit code"
                               maxlength="6"
                               inputmode="numeric" />
                        <div class="form-hint">Enter the code sent to your email</div>
                        <div class="error-message" id="codeError"></div>
                    </div>

                    <div class="resend-container">
                        <p class="resend-timer">
                            Didn't receive the code? 
                            <button type="button" id="resendBtn" class="resend-link">Resend Code</button>
                        </p>
                    </div>

                    <input type="hidden" name="phoneNumber" value="@phone" />
                    <input type="hidden" name="email" value="@email" />
                    <button type="submit" class="btn-submit" id="verifyCodeBtn">VERIFY CODE</button>
                </div>
            </form>

            <div class="links-container">
                <a href="@Url.Action("Login", "Auth")">Back to Login</a>
            </div>
        </div>
    </div>

    <script>
        const phoneInput = document.getElementById('phoneNumber');
        const emailInput = document.getElementById('email');
        const codeInput = document.getElementById('verificationCode');
        const resendBtn = document.getElementById('resendBtn');
        const actionInput = document.getElementById('actionInput');
        const resetForm = document.getElementById('resetForm');

        // Phone number formatting
        if (phoneInput) {
            phoneInput.addEventListener('input', function () {
                let phoneNum = this.value.replace(/\D/g, '');

                if (phoneNum.length > 11) {
                    phoneNum = phoneNum.substring(0, 11);
                }

                if (phoneNum.length === 10) {
                    this.value = phoneNum.substring(0, 3) + '-' + phoneNum.substring(3);
                } else if (phoneNum.length === 11) {
                    this.value = phoneNum.substring(0, 3) + '-' + phoneNum.substring(3);
                } else {
                    this.value = phoneNum;
                }
            });
        }

        // Code input - only allow digits
        if (codeInput) {
            codeInput.addEventListener('input', function () {
                this.value = this.value.replace(/\D/g, '').substring(0, 6);
            });
        }

        // Validate phone number format
        function validatePhoneNumber(phoneNumber) {
            const phoneRegex = /^01[0-9]-[0-9]{7,8}$/;
            return phoneRegex.test(phoneNumber);
        }

        // Validate email format
        function validateEmail(email) {
            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            return emailRegex.test(email);
        }

        // Form submission
        resetForm.addEventListener('submit', function (e) {
            const currentAction = actionInput.value;

            if (currentAction === 'send') {
                e.preventDefault();
                let isValid = true;

                // Validate phone
                if (!validatePhoneNumber(phoneInput.value)) {
                    document.getElementById('phoneNumberError').textContent = 'Invalid phone number format. Use 01X-XXXXXXX or 01X-XXXXXXXX';
                    document.getElementById('phoneNumberError').classList.add('show');
                    isValid = false;
                } else {
                    document.getElementById('phoneNumberError').classList.remove('show');
                }

                // Validate email
                if (!validateEmail(emailInput.value)) {
                    document.getElementById('emailError').textContent = 'Invalid email address';
                    document.getElementById('emailError').classList.add('show');
                    isValid = false;
                } else {
                    document.getElementById('emailError').classList.remove('show');
                }

                if (isValid) {
                    this.submit();
                }
            } else if (currentAction === 'verify') {
                e.preventDefault();

                if (codeInput.value.length !== 6) {
                    document.getElementById('codeError').textContent = 'Please enter a 6-digit verification code';
                    document.getElementById('codeError').classList.add('show');
                } else {
                    document.getElementById('codeError').classList.remove('show');
                    this.submit();
                }
            }
        });

        // Resend code button
        if (resendBtn) {
            resendBtn.addEventListener('click', function (e) {
                e.preventDefault();
                location.reload();
            });
        }

        // Update action value when VERIFY CODE button is clicked
        if (document.getElementById('verifyCodeBtn')) {
            document.getElementById('verifyCodeBtn').addEventListener('click', function (e) {
                actionInput.value = 'verify';
            });
        }
    </script>
</body>
</html>