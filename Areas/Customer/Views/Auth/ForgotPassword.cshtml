@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/Customer/css/auth.css" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-box login-box">
            <div class="auth-header">
                <h1>Reset Password</h1>
                <p>Enter your phone number to reset your password</p>
            </div>

            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger">@ViewData["Error"]</div>
            }

            @if (ViewData["Success"] != null)
            {
                <div class="alert alert-success">@ViewData["Success"]</div>
            }

            <form method="post">
                <div class="form-group">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Enter your phone number" required />
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email" required />
                </div>

                <button type="submit" class="btn-submit">Send Reset Link</button>
            </form>

            <div class="auth-footer">
                <p><a href="@Url.Action("Login", "Auth")">Back to Login</a></p>
            </div>
        </div>
    </div>
</body>
</html>