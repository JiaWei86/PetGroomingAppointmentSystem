@{
    ViewData["Title"] = "Customer Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/Customer/css/auth.css" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-box login-box">
            <div class="auth-header">
                <h1>Login</h1>
                <p>Enter your phone number and password</p>
            </div>

            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger">@ViewData["Error"]</div>
            }

            <form method="post">
                <div class="form-group">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Enter your phone number" required />
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password" required />
                </div>

                <button type="submit" class="btn-submit">Login</button>
            </form>

            <div class="auth-footer">
                <p>Don't have an account? <a href="@Url.Action("Register", "Auth")">Register here</a></p>
            </div>
        </div>
    </div>
</body>
</html>