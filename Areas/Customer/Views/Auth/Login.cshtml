@using PetGroomingAppointmentSystem.Areas.Customer.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Customer Login";
    Layout = null;
    bool isLocked = ViewData["IsLocked"] != null && (bool)ViewData["IsLocked"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/Customer/css/auth.css" />
    <style>
        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        .error-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: none;
        }

            .error-message.show {
                display: block;
            }

        .form-hint {
            color: #6c757d;
            font-size: 0.8rem;
            margin-top: 0.25rem;
        }

        .form-group input[type="text"],
        .form-group input[type="password"] {
            transition: all 0.3s ease;
            border-color: #ced4da;
            background-color: #fff;
            padding-right: 40px;
            width: 100%;
        }

        .form-group input:disabled {
            background-color: #e9ecef;
            border-color: #dee2e6;
            color: #6c757d;
        }

        .form-group.has-error input {
            border-color: #dc3545;
            background-color: #fff5f5;
        }

        .form-group.has-success input {
            border-color: #28a745;
            background-color: #f5fff9;
        }

        .validation-icon {
            position: absolute;
            right: 12px;
            top: 38px;
            font-size: 1.2rem;
            font-weight: bold;
            display: none;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            z-index: 2;
        }

            .validation-icon.show {
                display: flex;
            }

            .validation-icon.error {
                color: white;
                background-color: #dc3545;
            }

            .validation-icon.success {
                color: white;
                background-color: #28a745;
            }

        .password-toggle {
            position: absolute;
            right: 45px;
            top: 38px;
            background: none;
            border: none;
            cursor: pointer;
            padding: 0;
            color: #6c757d;
            z-index: 3;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 24px;
            height: 24px;
            font-size: 1.2rem;
        }

            .password-toggle:hover {
                color: #495057;
            }

            .password-toggle:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .checkbox-group {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            gap: 8px;
        }

            .checkbox-group input[type="checkbox"] {
                cursor: pointer;
                width: 18px;
                height: 18px;
                accent-color: #ff8800;
            }

            .checkbox-group input[type="checkbox"]:disabled {
                cursor: not-allowed;
                opacity: 0.5;
            }

            .checkbox-group label {
                cursor: pointer;
                margin: 0;
                color: #6c757d;
                font-size: 0.95rem;
                user-select: none;
            }

            .checkbox-group label:disabled {
                cursor: not-allowed;
                opacity: 0.5;
            }

        .btn-submit {
            width: 100%;
            padding: 12px;
            background-color: #ff8800;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-submit:hover:not(:disabled) {
                background-color: #e67e00;
            }

            .btn-submit:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }

        .alert {
            padding: 12px 16px;
            border-radius: 4px;
            margin-bottom: 20px;
            animation: slideDown 0.3s ease-out;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .alert-warning {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
        }

        .links-container {
            display: flex;
            justify-content: space-between;
            flex-direction: column;
            gap: 10px;
            font-size: 0.95rem;
            margin-top: 15px;
            text-align: center;
        }

            .links-container a {
                color: #ff8800;
                text-decoration: none;
                font-weight: 500;
            }

                .links-container a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-box">
            <div class="auth-header">
                <h1>Login</h1>
                <p>Enter your phone number and password</p>
            </div>

            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Error:</strong> @ViewData["Error"]
                </div>
            }

            @if (isLocked)
            {
                <div class="alert alert-warning">
                    <strong>Account Locked:</strong> Too many login attempts. Please try again in <span id="lockoutTimer">@ViewData["LockoutSeconds"]</span> seconds.
                </div>
            }

            <form id="loginForm" method="post">
                <div class="form-group">
                    <label for="phoneNumber">PHONE NUMBER</label>
                    <input type="text" 
                           id="phoneNumber" 
                           name="phoneNumber" 
                           placeholder="Enter your phone number" 
                           value="@Model?.PhoneNumber" 
                           maxlength="13" 
                           @(isLocked ? "disabled" : "") />
                    <div class="validation-icon" id="phoneNumberIcon"></div>
                    <div class="form-hint">Accepts: 012-3456789 or 0123456789</div>
                    <div class="error-message" id="phoneNumberError"></div>
                </div>

                <div class="form-group">
                    <label for="password">PASSWORD</label>
                    <input type="password" 
                           id="password" 
                           name="password" 
                           placeholder="Enter your password" 
                           @(isLocked ? "disabled" : "") />
                    <button type="button" 
                            class="password-toggle" 
                            id="passwordToggle" 
                            aria-label="Toggle password visibility" 
                            @(isLocked ? "disabled" : "")>
                        <i class="bi bi-eye-slash"></i>
                    </button>
                    <div class="validation-icon" id="passwordIcon"></div>
                    <div class="error-message" id="passwordError"></div>
                </div>

                <div class="checkbox-group">
                    <input type="checkbox" 
                           id="rememberMe" 
                           name="rememberMe" 
                           value="true"
                           @(isLocked ? "disabled" : "") />
                    <label for="rememberMe">Remember me for 30 days</label>
                </div>

                <button type="submit" class="btn-submit" id="submitBtn" @(isLocked ? "disabled" : "")>LOGIN</button>
            </form>

            <div class="links-container">
                <span>Don't have an account? <a href="@Url.Action("Register", "Auth")">Register here</a></span>
                <a href="@Url.Action("ForgotPassword", "Auth")">Forgot your password?</a>
            </div>
        </div>
    </div>

    <script>
        const isLocked = @(isLocked ? "true" : "false");

        // Disable all form inputs when locked
        if (isLocked) {
            document.getElementById('phoneNumber').disabled = true;
            document.getElementById('password').disabled = true;
            document.getElementById('passwordToggle').disabled = true;
            document.getElementById('rememberMe').disabled = true;
            document.getElementById('submitBtn').disabled = true;
        }

        // Phone number formatting
        document.getElementById('phoneNumber').addEventListener('input', function () {
            let phoneNum = this.value.replace(/\D/g, '');

            if (phoneNum.length === 10) {
                this.value = phoneNum.substring(0, 3) + '-' + phoneNum.substring(3);
            } else if (phoneNum.length === 11) {
                this.value = phoneNum.substring(0, 3) + '-' + phoneNum.substring(3);
            } else {
                this.value = phoneNum;
            }
        });

        // Password toggle
        document.getElementById('passwordToggle').addEventListener('click', function (e) {
            e.preventDefault();
            const passwordInput = document.getElementById('password');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            }
        });

        // Form validation
        const form = document.getElementById('loginForm');
        const phoneInput = document.getElementById('phoneNumber');
        const passwordInput = document.getElementById('password');

        function validatePhoneNumber(phoneNumber) {
            const phoneRegex = /^01[0-9]-[0-9]{7,8}$/;
            return phoneRegex.test(phoneNumber);
        }

        function validatePassword(password) {
            return password.trim().length > 0;
        }

        function showError(input, errorElement, message) {
            input.parentElement.classList.add('has-error');
            errorElement.textContent = message;
            errorElement.classList.add('show');
        }

        function clearError(input, errorElement) {
            input.parentElement.classList.remove('has-error');
            errorElement.classList.remove('show');
        }

        // Phone number validation
        phoneInput.addEventListener('blur', function () {
            const phoneNumberError = document.getElementById('phoneNumberError');
            const phoneNumberIcon = document.getElementById('phoneNumberIcon');

            if (this.value.trim() === '') {
                showError(this, phoneNumberError, 'Phone number is required');
                phoneNumberIcon.classList.remove('show');
            } else if (!validatePhoneNumber(this.value)) {
                showError(this, phoneNumberError, 'Phone number must be in format 01X-XXXXXXX or 01X-XXXXXXXX');
                phoneNumberIcon.classList.add('show', 'error');
                phoneNumberIcon.innerHTML = '✕';
            } else {
                clearError(this, phoneNumberError);
                phoneNumberIcon.classList.add('show', 'success');
                phoneNumberIcon.innerHTML = '✓';
            }
        });

        // Password validation
        passwordInput.addEventListener('blur', function () {
            const passwordError = document.getElementById('passwordError');
            const passwordIcon = document.getElementById('passwordIcon');

            if (this.value.trim() === '') {
                showError(this, passwordError, 'Password is required');
                passwordIcon.classList.remove('show');
            } else {
                clearError(this, passwordError);
                passwordIcon.classList.add('show', 'success');
                passwordIcon.innerHTML = '✓';
            }
        });

        // Form submit
        form.addEventListener('submit', function (e) {
            const phoneNumberError = document.getElementById('phoneNumberError');
            const passwordError = document.getElementById('passwordError');
            const phoneNumberIcon = document.getElementById('phoneNumberIcon');
            const passwordIcon = document.getElementById('passwordIcon');

            let isValid = true;

            if (!validatePhoneNumber(phoneInput.value)) {
                showError(phoneInput, phoneNumberError, 'Phone number must be in format 01X-XXXXXXX or 01X-XXXXXXXX');
                phoneNumberIcon.classList.add('show', 'error');
                phoneNumberIcon.innerHTML = '✕';
                isValid = false;
            }

            if (!validatePassword(passwordInput.value)) {
                showError(passwordInput, passwordError, 'Password is required');
                passwordIcon.classList.add('show', 'error');
                passwordIcon.innerHTML = '✕';
                isValid = false;
            }

            if (!isValid) {
                e.preventDefault();
            }
        });

        // Lockout timer
        @if (isLocked)
        {
            <text>
                let lockoutSeconds = parseInt('@ViewData["LockoutSeconds"]');
                const lockoutTimerElement = document.getElementById('lockoutTimer');

                function updateLockoutTimer() {
                    if (lockoutSeconds > 0) {
                        lockoutSeconds--;
                        lockoutTimerElement.textContent = lockoutSeconds;
                        setTimeout(updateLockoutTimer, 1000);
                    } else {
                        location.reload();
                    }
                }

                updateLockoutTimer();
            </text>
        }
    </script>
</body>
</html>