@using PetGroomingAppointmentSystem.Areas.Customer.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Customer Login";
    Layout = null;
    bool isLocked = ViewData["IsLocked"] != null && (bool)ViewData["IsLocked"];
    
    string rememberPhone = Context.Request.Cookies["RememberPhone"] ?? "";
    bool hasRemembered = !string.IsNullOrEmpty(rememberPhone);
    
    // ✅ 修复：改为 Context.Request.Query
    bool isRegistered = Context.Request.Query["registered"] == "true";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/Customer/css/auth.css" />
    <style>
        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        .error-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: none;
        }

            .error-message.show {
                display: block;
            }

        .success-message {
            color: #28a745;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: none;
        }

            .success-message.show {
                display: block;
            }

        .form-hint {
            color: #6c757d;
            font-size: 0.8rem;
            margin-top: 0.25rem;
        }

        .form-group input[type="text"],
        .form-group input[type="password"] {
            transition: all 0.3s ease;
            border: 2px solid #e0e0e0;
            background-color: #fff;
            width: 100%;
            padding: 12px 14px;
            border-radius: 8px;
            font-size: 1rem;
            font-family: inherit;
            outline: none;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .form-group input[type="text"]:focus,
        .form-group input[type="password"]:focus {
            border-color: #ff8800;
            box-shadow: 0 0 0 3px rgba(255, 136, 0, 0.1), 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group input[type="text"]::placeholder,
        .form-group input[type="password"]::placeholder {
            color: #b0b0b0;
        }

        .form-group input:disabled {
            background-color: #f5f5f5;
            border-color: #e0e0e0;
            color: #999;
            cursor: not-allowed;
        }

        .form-group.has-error input {
            border-color: #dc3545;
            background-color: #fff8f8;
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1), 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .form-group.has-error input:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.15), 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group.has-success input {
            border-color: #28a745;
            background-color: #f8fdf9;
            box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1), 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .form-group.has-success input:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.15), 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .password-toggle {
            position: absolute;
            right: 12px;
            top: 38px;
            background: none;
            border: none;
            cursor: pointer;
            padding: 0;
            color: #6c757d;
            z-index: 3;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 24px;
            height: 24px;
            font-size: 1.2rem;
        }

            .password-toggle:hover {
                color: #495057;
            }

            .password-toggle:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .checkbox-group {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            gap: 8px;
        }

            .checkbox-group input[type="checkbox"] {
                cursor: pointer;
                width: 18px;
                height: 18px;
                accent-color: #ff8800;
            }

            .checkbox-group input[type="checkbox"]:disabled {
                cursor: not-allowed;
                opacity: 0.5;
            }

            .checkbox-group label {
                cursor: pointer;
                margin: 0;
                color: #6c757d;
                font-size: 0.95rem;
                user-select: none;
            }

            .checkbox-group label:disabled {
                cursor: not-allowed;
                opacity: 0.5;
            }

        .btn-submit {
            width: 100%;
            padding: 12px;
            background-color: #ff8800;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-submit:hover:not(:disabled) {
                background-color: #e67e00;
            }

            .btn-submit:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }

        .alert {
            padding: 12px 16px;
            border-radius: 4px;
            margin-bottom: 20px;
            animation: slideDown 0.3s ease-out;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .alert-warning {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
        }

        .alert-info {
            background-color: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .links-container {
            display: flex;
            justify-content: space-between;
            flex-direction: column;
            gap: 10px;
            font-size: 0.95rem;
            margin-top: 15px;
            text-align: center;
        }

            .links-container a {
                color: #ff8800;
                text-decoration: none;
                font-weight: 500;
            }

                .links-container a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-box">
            <div class="auth-header">
                <h1>Login</h1>
                <p>Enter your phone number and password</p>
            </div>

            @* ✅ 显示注册成功消息 *@
            @if (isRegistered)
            {
                <div class="alert alert-success">
                    <strong>Success!</strong> Registration successful! Please login with your credentials.
                </div>
            }

            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Error:</strong> @ViewData["Error"]
                </div>
            }

            @if (isLocked)
            {
                <div class="alert alert-warning">
                    <strong>Account Locked:</strong> Too many login attempts. Please try again in <span id="lockoutTimer">@ViewData["LockoutSeconds"]</span> seconds.
                </div>
            }

            @if (hasRemembered)
            {
                <div class="alert alert-info">
                    <strong>Welcome back!</strong> Your phone number has been restored from your last login.
                </div>
            }

            <form id="loginForm" method="post">
                <div class="form-group">
                    <label for="phoneNumber">PHONE NUMBER</label>
                    <input type="text" 
                           id="phoneNumber" 
                           name="phoneNumber" 
                           placeholder="Enter your phone number" 
                           value="@(Model?.PhoneNumber ?? rememberPhone)" 
                           maxlength="13" 
                           inputmode="numeric"
                           @(isLocked ? "disabled" : "") />
                    <div class="form-hint">Accepts: 012-3456789 or 0123456789</div>
                    <div class="error-message" id="phoneNumberError"></div>
                    <div class="success-message" id="phoneNumberSuccess"></div>
                </div>

                <div class="form-group">
                    <label for="password">PASSWORD</label>
                    <input type="password" 
                           id="password" 
                           name="password" 
                           placeholder="Enter your password" 
                           @(isLocked ? "disabled" : "") />
                    <button type="button" 
                            class="password-toggle" 
                            id="passwordToggle" 
                            aria-label="Toggle password visibility" 
                            @(isLocked ? "disabled" : "")>
                        <i class="bi bi-eye-slash"></i>
                    </button>
                    <div class="error-message" id="passwordError"></div>
                </div>

                <div class="checkbox-group">
                    <input type="checkbox" 
                           id="rememberMe" 
                           name="rememberMe" 
                           value="true"
                           @(hasRemembered ? "checked" : "")
                           @(isLocked ? "disabled" : "") />
                    <label for="rememberMe">Remember me for 30 days</label>
                </div>

                <button type="submit" class="btn-submit" id="submitBtn" @(isLocked ? "disabled" : "")>LOGIN</button>
            </form>

            <div class="links-container">
                <span>Don't have an account? <a href="@Url.Action("Register", "Auth")">Register here</a></span>
                <a href="@Url.Action("ForgotPassword", "Auth")">Forgot your password?</a>
            </div>
        </div>
    </div>

    <script>
        const isLocked = @(isLocked ? "true" : "false");
        let phoneValidationTimeout;
        let isPhoneRegistered = false;
        let isPasswordFilled = false;

        // Disable all form inputs when locked
        if (isLocked) {
            document.getElementById('phoneNumber').disabled = true;
            document.getElementById('password').disabled = true;
            document.getElementById('passwordToggle').disabled = true;
            document.getElementById('rememberMe').disabled = true;
            document.getElementById('submitBtn').disabled = true;
        }

        // ✅ 新增：页面加载时验证预填充的电话号码
        window.addEventListener('load', function () {
            const phoneInput = document.getElementById('phoneNumber');
            if (phoneInput.value.length > 0) {
                // 如果电话号码已预填充，立即验证
                validatePhoneForLogin(phoneInput.value);
            }
        });

        // ✅ Phone number formatting
        document.getElementById('phoneNumber').addEventListener('input', function () {
            let phoneNum = this.value.replace(/\D/g, '');

            if (phoneNum.length > 11) {
                phoneNum = phoneNum.substring(0, 11);
            }

            if (phoneNum.length === 10) {
                this.value = phoneNum.substring(0, 3) + '-' + phoneNum.substring(3);
            } else if (phoneNum.length === 11) {
                this.value = phoneNum.substring(0, 3) + '-' + phoneNum.substring(3);
            } else {
                this.value = phoneNum;
            }

            // ✅ Real-time validation for phone number
            clearTimeout(phoneValidationTimeout);
            phoneValidationTimeout = setTimeout(() => {
                validatePhoneForLogin(this.value);
            }, 100);
        });

        // ✅ Real-time validation for phone number on login
        async function validatePhoneForLogin(phoneNumber) {
            try {
                const phoneRegex = /^01[0-9]-[0-9]{7,8}$/;
                
                const phoneInput = document.getElementById('phoneNumber');
                const formGroup = phoneInput.parentElement;
                const errorElement = document.getElementById('phoneNumberError');
                const successElement = document.getElementById('phoneNumberSuccess');

                // If format is incomplete, don't validate yet
                if (!phoneRegex.test(phoneNumber)) {
                    if (phoneNumber.length === 0) {
                        // Empty field - clear errors
                        formGroup.classList.remove('has-error', 'has-success');
                        errorElement.classList.remove('show');
                        successElement.classList.remove('show');
                        isPhoneRegistered = false;
                    }
                    updateSubmitButtonState();
                    return;
                }

                // Format is correct, check if registered
                const response = await fetch('@Url.Action("ValidatePhoneNumberRegistered", "Auth", new { area = "Customer" })', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: new URLSearchParams({
                        phoneNumber: phoneNumber
                    })
                });

                const data = await response.json();

                if (data.isRegistered) {
                    // Phone is registered - show success
                    formGroup.classList.remove('has-error');
                    formGroup.classList.add('has-success');
                    
                    successElement.textContent = 'Phone number is registered.';
                    successElement.classList.add('show');
                    errorElement.classList.remove('show');
                    isPhoneRegistered = true;
                } else {
                    // Phone is not registered - show error
                    formGroup.classList.remove('has-success');
                    formGroup.classList.add('has-error');
                    
                    errorElement.textContent = "Phone number hasn't registered.";
                    errorElement.classList.add('show');
                    successElement.classList.remove('show');
                    isPhoneRegistered = false;
                }
            } catch (error) {
                console.error('Validation error:', error);
                isPhoneRegistered = false;
            }

            updateSubmitButtonState();
        }

        // Password toggle
        document.getElementById('passwordToggle').addEventListener('click', function (e) {
            e.preventDefault();
            const passwordInput = document.getElementById('password');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            }
        });

        // ✅ Clear password error on input & track password state
        document.getElementById('password').addEventListener('input', function () {
            isPasswordFilled = this.value.length > 0;
            
            if (this.value.length > 0) {
                const formGroup = this.parentElement;
                formGroup.classList.remove('has-error');
                document.getElementById('passwordError').classList.remove('show');
            }
            
            updateSubmitButtonState();
        });

        // ✅ 根据验证状态更新按钮
        function updateSubmitButtonState() {
            const submitBtn = document.getElementById('submitBtn');
            const phoneInput = document.getElementById('phoneNumber');
            const phoneRegex = /^01[0-9]-[0-9]{7,8}$/;

            const isPhoneFormatValid = phoneRegex.test(phoneInput.value);
            const canSubmit = isPhoneRegistered && isPasswordFilled && isPhoneFormatValid && !isLocked;

            if (canSubmit) {
                submitBtn.disabled = false;
                submitBtn.style.opacity = '1';
                submitBtn.style.cursor = 'pointer';
            } else {
                submitBtn.disabled = true;
                submitBtn.style.opacity = '0.6';
                submitBtn.style.cursor = 'not-allowed';
            }
        }

        // Form submit validation
        const form = document.getElementById('loginForm');
        const phoneInput = document.getElementById('phoneNumber');
        const passwordInput = document.getElementById('password');

        function validatePhoneNumber(phoneNumber) {
            const phoneRegex = /^01[0-9]-[0-9]{7,8}$/;
            return phoneRegex.test(phoneNumber);
        }

        function showError(fieldName, message) {
            const input = document.getElementById(fieldName);
            const errorElement = document.getElementById(fieldName + 'Error');
            const formGroup = input.parentElement;
            
            formGroup.classList.add('has-error');
            errorElement.textContent = message;
            errorElement.classList.add('show');
        }

        // Form submit event
        form.addEventListener('submit', function (e) {
            let isValid = true;

            // Validate phone number
            if (!validatePhoneNumber(phoneInput.value)) {
                const cleanedPhone = phoneInput.value.replace(/\D/g, '');
                
                if (cleanedPhone.length < 10) {
                    showError('phoneNumber', `Phone number too short. ${cleanedPhone.length}/10 digits entered`);
                } else {
                    showError('phoneNumber', 'Invalid format. Use 01X-XXXXXXX or 01X-XXXXXXXX');
                }
                isValid = false;
            }

            // ✅ 检查电话号码是否已注册
            if (!isPhoneRegistered) {
                showError('phoneNumber', "Phone number hasn't registered.");
                isValid = false;
            }

            // Validate password
            if (passwordInput.value.length === 0) {
                showError('password', 'Password is required');
                isValid = false;
            }

            // Prevent submit if validation fails
            if (!isValid) {
                e.preventDefault();
            }
        });

        // Lockout timer
        @if (isLocked)
        {
            <text>
                let lockoutSeconds = parseInt('@ViewData["LockoutSeconds"]');
                const lockoutTimerElement = document.getElementById('lockoutTimer');

                function updateLockoutTimer() {
                    if (lockoutSeconds > 0) {
                        lockoutSeconds--;
                        lockoutTimerElement.textContent = lockoutSeconds;
                        setTimeout(updateLockoutTimer, 1000);
                    } else {
                        window.location.href = '@Url.Action("Login", "Auth", new { area = "Customer" })';
                    }
                }

                updateLockoutTimer();
            </text>
        }
    </script>
</body>
</html>